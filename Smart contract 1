pragma solidity ^0.8.17;

contract FruitMarket {
    address public owner_vendor;
    constructor(){
        owner_vendor = msg.sender;
    }
   struct Fruit {
        string name;
        uint weight;
        uint diameter;
        uint quality;
        uint pricePerKg;
    }

    struct Offer {
        address vendor;
        Fruit fruit;
        uint quantity;
    }





